@model ECommerce.Models.Product

@{
    ViewData["Title"] = "Crear Producto";
}

<!--<div asp-validation-summary="All" class="text-danger"></div>--> 

<h2>Crear Producto</h2>

<form asp-action="Create" asp-controller="Products" asp-area="Admin" enctype="multipart/form-data" method="post">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="text-danger"></div> 

    
    <div class="form-group mb-3">
        <label asp-for="Name" class="form-label">Nombre</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Price" class="form-label">Precio</label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" lang="en" />
        <!--<input asp-for="Price" class="form-control" type="number" step="0.01" />-->
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Stock" class="form-label">Stock</label>
        <input asp-for="Stock" class="form-control" type="number" />
        <span asp-validation-for="Stock" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Description" class="form-label">Descripci√≥n</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <!-- üëá Campo para subir imagen -->
    <div class="form-group mb-3">
        <label asp-for="ImageFile" class="form-label">Imagen del Producto</label>
        <input type="file" asp-for="ImageFile" class="form-control" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" asp-controller="Products" asp-area="Admin" class="btn btn-secondary">Cancelar</a>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
