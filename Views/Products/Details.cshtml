@using ECommerce.Models
@model Product

@{
    ViewData["Title"] = Model?.Name ?? "Detalle del producto";
}

<div class="row">
    <div class="col-md-6">
        <img src="@(string.IsNullOrEmpty(Model.ImagePath) ? Url.Content("~/images/no-image.png") : Model.ImagePath)"
             class="img-fluid rounded"
             style="object-fit:cover; width:100%; height:450px;"
             alt="@Model.Name" />
    </div>

    <div class="col-md-6">
        <h1>@Model.Name</h1>

        <p class="text-muted">SKU: @Model.Id</p>

        <h3 class="text-primary">
            @string.Format(System.Globalization.CultureInfo.GetCultureInfo("es-PE"), "{0:C}", Model.Price)
        </h3>

        <p class="mt-3">
            @Model.Description
        </p>

        <p>
            <strong>Stock:</strong> @Model.Stock
        </p>

        <form asp-controller="Cart" asp-action="Add" method="post" class="row g-2 align-items-center">
            @Html.AntiForgeryToken()
            <input type="hidden" name="productId" value="@Model.Id" />
            <div class="col-auto">
                <label for="qty" class="visually-hidden">Cantidad</label>
                <input id="qty" type="number" name="qty" value="1" min="1" max="@Model.Stock" class="form-control" style="width:100px;" />
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-success">Agregar al carrito</button>
            </div>
            <div class="col-12 mt-3">
                <a asp-controller="Products" asp-action="Index" class="btn btn-link">← Volver al catálogo</a>
            </div>
        </form>
    </div>
</div>
