@using ECommerce.Models
@model IEnumerable<Product>

@{
    ViewData["Title"] = "Productos";
}

<h1 class="mb-4">Cat√°logo de productos</h1>

<div class="row">
    @if (!Model.Any())
    {
        <div class="col-12">
            <div class="alert alert-info">No hay productos disponibles.</div>
        </div>
    }
    else
    {
        foreach (var product in Model)
        {
            <div class="col-md-4 col-sm-6 mb-4">
                <div class="card h-100">
                    <img src="@(string.IsNullOrEmpty(product.ImagePath) ? Url.Content("~/imagenes/no-image.png") : product.ImagePath)"
                         class="card-img-top"
                         style="object-fit:cover; height:200px;"
                         alt="@product.Name" />

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@product.Name</h5>

                        <p class="card-text text-truncate" title="@product.Description">
                            @product.Description
                        </p>

                        <div class="mt-auto">
                            <p class="h5 mb-2">@string.Format(System.Globalization.CultureInfo.GetCultureInfo("es-PE"), "{0:C}", product.Price)</p>

                            <div class="d-flex justify-content-between align-items-center">
                                <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id" class="btn btn-outline-secondary btn-sm">
                                    Ver
                                </a>

                                <form asp-controller="Cart" asp-action="Add" method="post" class="d-inline-block">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="productId" value="@product.Id" />
                                    <input type="number" name="qty" value="1" min="1" class="form-control form-control-sm d-inline-block" style="width:80px;" />
                                    <button type="submit" class="btn btn-primary btn-sm ms-2">Agregar al carrito</button>
                                </form>
                            </div>
                        </div>
                    </div>

                    <div class="card-footer text-muted small">
                        Stock: @product.Stock
                    </div>
                </div>
            </div>
        }
    }
</div>
